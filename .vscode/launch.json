{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main Process (ts-node)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--inspect=9229",
                "--remote-debugging-port=9223"
            ],
            "args": [
                "-r", "ts-node/register",
                "${workspaceFolder}/src/main/main.ts"
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "smartStep": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
            "sourceMapPathOverrides": {
                "*": "${workspaceFolder}/*",
                "file:///*": "${workspaceFolder}/*",
                "/src/*": "${workspaceFolder}/src/*",
                "/./*": "${workspaceFolder}/*",
                "/Users/karwo09/code/voice-assistant/*": "${workspaceFolder}/*"
            },
            "outputCapture": "std",
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--max-old-space-size=8192",
                "TS_NODE_COMPILER_OPTIONS": "{\"sourceMap\":true,\"inlineSources\":true,\"mapRoot\":\"${workspaceFolder}\",\"sourceRoot\":\"${workspaceFolder}\"}"
            },
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "name": "Debug Main Process (Webpack)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                "${workspaceFolder}/dist/main/main.js",
                "--enable-logging"
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "preLaunchTask": "build:main",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${workspaceFolder}/src/*",
                "webpack:///*": "${workspaceFolder}/*"
            },
            "outputCapture": "std",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Debug Renderer Process",
            "type": "chrome",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "${workspaceFolder}/src/main/main.ts",
                "--remote-debugging-port=9222"
            ],
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${workspaceFolder}/src/*",
                "webpack:///*": "${workspaceFolder}/*"
            },
            "timeout": 30000,
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Attach to Renderer Process",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${workspaceFolder}/src/*",
                "webpack:///*": "${workspaceFolder}/*"
            },
            "timeout": 30000
        },
        {
            "name": "Debug Dev Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:main"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--inspect --max-old-space-size=8192"
            },
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "${workspaceFolder}/src/**/*.ts"
            ],
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${workspaceFolder}/src/*"
            },
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "name": "Debug: Start Dev Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:renderer"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Debug: Simple TS-Node",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
            "args": [
                "--project", "tsconfig.debug.json",
                "${workspaceFolder}/src/main/main.ts"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "ELECTRON_RUN_AS_NODE": "1"
            }
        },
        {
            "name": "Debug: Test Breakpoints",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/debug-test.ts",
            "runtimeArgs": ["-r", "ts-node/register"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.debug.json"
            },
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Full Application Debug",
            "configurations": [
                "Debug: Start Dev Server",
                "Debug Main Process (ts-node)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 1
            }
        },
        {
            "name": "Main + Renderer (ts-node)",
            "configurations": [
                "Debug Main Process (ts-node)",
                "Attach to Renderer Process"
            ],
            "stopAll": true
        },
        {
            "name": "Full Debug (Dev Server)",
            "configurations": [
                "Debug Dev Server"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 2
            }
        }
    ]
}