{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron Main (ts-node)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/Users/karwo09/.nvm/versions/node/v20.19.2/bin/node",
            "program": "${workspaceFolder}/node_modules/electron/cli.js",
            "args": [
                "${workspaceFolder}/src/main/main.ts",
                "--remote-debugging-port=9222"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "smartStep": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outputCapture": "std",
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--max-old-space-size=8192 --require ts-node/register/transpile-only",
                "TS_NODE_COMPILER_OPTIONS": "{\"sourceMap\":true,\"inlineSources\":true}",
                "ELECTRON_ENABLE_LOGGING": "1"
            },
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "name": "Attach to Renderer (9222)",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "timeout": 60000,
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${workspaceFolder}/src/*",
                "webpack:///*": "${workspaceFolder}/*"
            }
        },
        {
            "name": "Debug: Start Dev Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:renderer"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "PATH": "/Users/karwo09/.nvm/versions/node/v20.19.2/bin:${env:PATH}"
            }
        },
        // Optional: build+run main from dist instead of ts-node (if you ever switch)
        {
            "name": "Electron Main (Webpack build)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/Users/karwo09/.nvm/versions/node/v20.19.2/bin/node",
            "program": "${workspaceFolder}/node_modules/electron/cli.js",
            "args": [
                "${workspaceFolder}/dist/main/main.js",
                "--enable-logging",
                "--remote-debugging-port=9222"
            ],
            "preLaunchTask": "build:main",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${workspaceFolder}/src/*",
                "webpack:///*": "${workspaceFolder}/*"
            },
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Debug RouterLangGraphAgent Test",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/Users/karwo09/.nvm/versions/node/v20.19.2/bin/node",
            "program": "${workspaceFolder}/src/main/agents/test-file.ts",
            "args": [
                "research"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "smartStep": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outputCapture": "std",
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--max-old-space-size=8192 --require ts-node/register/transpile-only",
                "TS_NODE_COMPILER_OPTIONS": "{\"sourceMap\":true,\"inlineSources\":true}",
                "LANGSMITH_API_KEY": "${env:LANGSMITH_API_KEY}",
                "LANGSMITH_ENDPOINT": "${env:LANGSMITH_ENDPOINT}",
                "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
            },
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Full Application Debug",
            "configurations": [
                "Debug: Start Dev Server",
                "Electron Main (ts-node)",
                "Attach to Renderer (9222)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 1
            }
        }
    ]
}