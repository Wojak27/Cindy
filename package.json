{
    "name": "cindy",
    "productName": "Cindy",
    "version": "1.0.0",
    "description": "Always-on, cross-platform voice research assistant",
    "author": "Cindy Team",
    "main": "./dist/main.js",
    "engines": {
        "node": ">=22.0.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
        "update-versions": "node scripts/update-versions.js",
        "generate-icons": "node scripts/generate-icons.js",
        "build:main": "cross-env NODE_ENV=production webpack --config ./.webpack/main.js",
        "build:renderer": "cross-env NODE_ENV=production webpack --config ./.webpack/renderer.js",
        "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
        "dev:main": "cross-env NODE_ENV=development NODE_OPTIONS=\"--max-old-space-size=8192\" electron -r ts-node/register src/main/main.ts",
        "dev:renderer": "cross-env NODE_ENV=development webpack serve --config ./.webpack/renderer.js",
        "package": "npm run build && electron-builder build --publish never",
        "package:all": "npm run build && electron-builder build --publish never --mac --win --linux",
        "release": "npm run build && electron-builder build --publish always",
        "test": "jest",
        "test:unit": "jest src/__tests__/unit",
        "test:integration": "jest src/__tests__/integration",
        "test:e2e": "playwright test",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "pre-commit": "lint-staged"
    },
    "dependencies": {
        "@aws-crypto/sha256-js": "^5.2.0",
        "@cyntler/react-doc-viewer": "^1.17.0",
        "@duckdb/duckdb-wasm": "^1.30.0",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@langchain/anthropic": "^0.3.27",
        "@langchain/cohere": "^0.3.4",
        "@langchain/community": "^0.3.55",
        "@langchain/core": "^0.3.75",
        "@langchain/google-genai": "^0.2.17",
        "@langchain/groq": "^0.2.3",
        "@langchain/langgraph": "^0.4.9",
        "@langchain/ollama": "^0.2.4",
        "@langchain/openai": "^0.6.11",
        "@langchain/tavily": "^0.1.5",
        "@langchain/textsplitters": "^0.1.0",
        "@microsoft/microsoft-graph-client": "^3.0.7",
        "@mui/icons-material": "^7.3.2",
        "@mui/material": "^7.3.2",
        "@picovoice/porcupine-node": "^3.0.6",
        "@react-three/drei": "^10.7.5",
        "@react-three/fiber": "^9.3.0",
        "@reduxjs/toolkit": "^2.9.0",
        "@smithy/protocol-http": "^5.2.0",
        "@smithy/signature-v4": "^5.2.0",
        "@smithy/types": "^4.4.0",
        "@smithy/util-utf8": "^4.1.0",
        "@types/leaflet": "^1.9.20",
        "@types/marked": "^6.0.0",
        "@xenova/transformers": "^2.17.2",
        "auto-launch": "^5.0.6",
        "axios": "^1.11.0",
        "bull": "^4.16.5",
        "cookieconsent": "^3.1.1",
        "dotenv": "16.4.7",
        "duck-duck-scrape": "^2.2.7",
        "duckdb-async": "^1.3.4",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^10.1.0",
        "faiss-node": "^0.5.1",
        "googleapis": "^159.0.0",
        "keytar": "^7.9.0",
        "kokoro-js": "^1.2.1",
        "langchain": "^0.3.33",
        "leaflet": "^1.9.4",
        "mammoth": "^1.10.0",
        "marked": "^16.2.1",
        "mermaid": "^11.11.0",
        "microsoft-cognitiveservices-speech-sdk": "^1.45.0",
        "node-cron": "^4.2.1",
        "node-polyfill-webpack-plugin": "^4.1.0",
        "openai": "^5.20.0",
        "pdf-parse": "^1.1.1",
        "pickleparser": "^0.2.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-leaflet": "^5.0.0",
        "react-pdf": "^10.1.0",
        "react-redux": "^9.2.0",
        "readable-stream": "^4.7.0",
        "redux": "^5.0.1",
        "sherpa-onnx": "^1.12.11",
        "simplex-noise": "^4.0.3",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "streamdown": "^1.2.0",
        "three": "^0.180.0",
        "word-extractor": "^1.0.4",
        "zod": "^4.1.5",
        "zotero-api-client": "^0.47.0"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.1",
        "@mermaid-js/mermaid-cli": "^11.9.0",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/auto-launch": "^5.0.5",
        "@types/electron": "^1.4.38",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.3.1",
        "@types/pdf-parse": "^1.1.5",
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "autoevals": "^0.0.131",
        "codecov": "^3.8.3",
        "concurrently": "^9.2.1",
        "copy-webpack-plugin": "^13.0.1",
        "cross-env": "^10.0.0",
        "css-loader": "^7.1.2",
        "electron": "^38.0.0",
        "electron-builder": "^26.0.12",
        "electron-devtools-installer": "^4.0.0",
        "electron-mocha": "^13.1.0",
        "eslint": "^9.35.0",
        "execa": "^9.6.0",
        "fscore": "^1.2.0",
        "html-loader": "^5.1.0",
        "html-webpack-plugin": "^5.6.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^30.1.3",
        "jest-environment-jsdom": "^30.1.2",
        "jest-html-reporter": "^4.3.0",
        "jest-junit": "^16.0.0",
        "js-rouge": "^3.0.0",
        "node-loader": "^2.1.0",
        "playwright": "^1.55.0",
        "precision-recall": "^1.0.2",
        "prettier": "^3.6.2",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.4.1",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.5",
        "webpack": "^5.101.3",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    },
    "build": {
        "productName": "Cindy",
        "appId": "com.cindy.app",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "assets/**/*",
            "package.json"
        ],
        "icon": "assets/icons/cindy-icon-v1.png",
        "mac": {
            "icon": "assets/icons/cindy-icon-v1.png",
            "category": "public.app-category.productivity",
            "entitlements": "entitlements.plist",
            "entitlementsInherit": "entitlements.plist",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "icon": "assets/icons/cindy-icon-v1.png",
            "target": [
                "nsis",
                "zip"
            ]
        },
        "linux": {
            "icon": "assets/icons/cindy-icon-v1.png",
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Office"
        }
    }
}
