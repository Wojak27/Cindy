{
    "name": "cindy",
    "productName": "Cindy",
    "version": "1.0.0",
    "description": "Always-on, cross-platform voice research assistant",
    "main": "./src/main/index.ts",
    "engines": {
        "node": ">=22.0.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
        "update-versions": "node scripts/update-versions.js",
        "build:main": "cross-env NODE_ENV=production webpack --config ./.webpack/main.js",
        "build:renderer": "cross-env NODE_ENV=production webpack --config ./.webpack/renderer.js",
        "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
        "dev:main": "cross-env NODE_ENV=development NODE_OPTIONS=\"--max-old-space-size=8192\" electron -r ts-node/register src/main/main.ts",
        "dev:renderer": "cross-env NODE_ENV=development webpack serve --config ./.webpack/renderer.js",
        "package": "npm run build && electron-builder build --publish never",
        "package:all": "npm run build && electron-builder build --publish never --mac --win --linux",
        "release": "npm run build && electron-builder build --publish always",
        "test": "jest",
        "test:unit": "jest src/__tests__/unit",
        "test:integration": "jest src/__tests__/integration",
        "test:e2e": "playwright test",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "pre-commit": "lint-staged"
    },
    "dependencies": {
        "@aws-crypto/sha256-js": "^5.2.0",
        "@cyntler/react-doc-viewer": "^1.17.0",
        "@duckdb/duckdb-wasm": "^1.29.1-dev132.0",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@langchain/anthropic": "^0.3.26",
        "@langchain/cohere": "^0.3.4",
        "@langchain/community": "^0.3.50",
        "@langchain/core": "^0.3.67",
        "@langchain/google-genai": "^0.2.16",
        "@langchain/groq": "^0.2.3",
        "@langchain/langgraph": "^0.4.5",
        "@langchain/ollama": "^0.2.3",
        "@langchain/openai": "^0.6.5",
        "@langchain/textsplitters": "^0.1.0",
        "@microsoft/microsoft-graph-client": "^3.0.7",
        "@mui/icons-material": "^7.3.0",
        "@mui/material": "^7.3.0",
        "@picovoice/porcupine-node": "^3.0.0",
        "@react-three/drei": "^10.6.1",
        "@react-three/fiber": "^9.3.0",
        "@reduxjs/toolkit": "^2.8.2",
        "@smithy/protocol-http": "^5.1.3",
        "@smithy/signature-v4": "^5.1.3",
        "@smithy/types": "^4.3.2",
        "@smithy/util-utf8": "^4.0.0",
        "@types/leaflet": "^1.9.20",
        "@types/marked": "^6.0.0",
        "@xenova/transformers": "^2.17.2",
        "auto-launch": "^5.0.5",
        "axios": "^1.4.0",
        "bull": "^4.11.5",
        "cookieconsent": "^3.1.1",
        "deepagents": "file:deepagentsjs",
        "duck-duck-scrape": "^2.2.7",
        "duckdb-async": "^1.3.2",
        "electron": "^25.0.0",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^10.1.0",
        "faiss-node": "^0.5.1",
        "googleapis": "^150.0.0",
        "keytar": "^7.9.0",
        "kokoro-js": "^1.2.1",
        "langchain": "^0.3.30",
        "leaflet": "^1.9.4",
        "mammoth": "^1.10.0",
        "marked": "^16.1.2",
        "mermaid": "^11.10.1",
        "microsoft-cognitiveservices-speech-sdk": "^1.32.0",
        "node-cron": "^3.0.2",
        "node-polyfill-webpack-plugin": "^4.1.0",
        "openai": "^4.0.0",
        "pdf-parse": "^1.1.1",
        "pickleparser": "^0.2.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-leaflet": "^5.0.0",
        "react-pdf": "^9.1.1",
        "react-redux": "^9.2.0",
        "readable-stream": "^4.7.0",
        "redux": "^5.0.0",
        "simplex-noise": "^4.0.3",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "three": "^0.179.1",
        "whisper-node": "^1.1.1",
        "word-extractor": "^1.0.4",
        "zod": "^3.22.4",
        "zotero-api-client": "^0.47.0"
    },
    "devDependencies": {
        "@types/auto-launch": "^5.0.5",
        "@types/jest": "^29.5.0",
        "@types/node": "^22.0.0",
        "@types/pdf-parse": "^1.1.5",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "codecov": "^3.8.3",
        "concurrently": "^8.0.0",
        "copy-webpack-plugin": "^13.0.1",
        "cross-env": "^7.0.0",
        "css-loader": "^7.1.2",
        "electron-builder": "^24.0.0",
        "electron-devtools-installer": "^4.0.0",
        "electron-mocha": "^12.0.0",
        "eslint": "^8.0.0",
        "html-loader": "^5.1.0",
        "html-webpack-plugin": "^5.6.3",
        "jest": "^29.5.0",
        "jest-html-reporter": "^3.10.0",
        "jest-junit": "^16.0.0",
        "node-loader": "^2.1.0",
        "playwright": "^1.32.0",
        "prettier": "^2.8.0",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.0",
        "ts-node": "^10.9.0",
        "webpack": "^5.80.0",
        "webpack-cli": "^5.0.0",
        "webpack-dev-server": "^4.13.0"
    },
    "build": {
        "productName": "Cindy",
        "appId": "com.cindy.app",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "assets/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "entitlements": "entitlements.plist",
            "entitlementsInherit": "entitlements.plist",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Office"
        }
    }
}
