{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "allowImportingTsExtensions": true,
        "sourceMap": true,
        "lib": [
            "ES2023",
            "DOM"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@main/*": [
                "src/main/*"
            ],
            "@renderer/*": [
                "src/renderer/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        },
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "electron"
        ]
    },
    "include": [
        "src/main/**/*",
        "src/renderer/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/node_modules/**/*",
        "dist/**/*",
        "build/**/*",
        "release/**/*",
        "sherpa-onnx/**/*",
        "datasets/**/*",
        "data/**/*",
        "models/**/*",
        "papers/**/*",
        "website/**/*",
        ".next/**/*",
        ".turbo/**/*",
        ".cache/**/*",
        ".webpack/**/*",
        "coverage/**/*",
        "out/**/*",
        "**/__tests__/**",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.gen.ts",
        "**/*.gen.tsx",
        "**/__generated__/**",
        "**/*.min.js",
        "**/*.min.css",
        "**/*.map",
        "**/*.d.ts",
        "**/*.log",
        "**/*.tmp",
        "**/*.temp",
        "**/*.db",
        "**/*.wal",
        "**/*.sqlite",
        "**/*.sqlite3"
    ]
}