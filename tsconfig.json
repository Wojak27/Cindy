{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2023",
            "DOM"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@main/*": [
                "src/main/*"
            ],
            "@renderer/*": [
                "src/renderer/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        },
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "electron"
        ]
    },
    "include": [
        "src/main/**/*",
        "src/renderer/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "dist/*",
        "build/*",
        "release/*",
        "sherpa-onnx/*",
        ".next",
        ".turbo",
        ".cache",
        "coverage",
        "out",
        "**/__tests__/**",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.gen.ts",
        "**/*.gen.tsx",
        "**/__generated__/**"
    ]
}