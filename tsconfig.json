{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2024",
            "DOM"
        ],
        "jsx": "react-jsx",
        "strict": true, // optional but recommended
        "noEmit": true, // editor only â€“ no build output
        "baseUrl": ".",
        "paths": {
            "@main/*": [
                "src/main/*"
            ],
            "@renderer/*": [
                "src/renderer/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        },
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true, // <<< major perf boost
        "types": [
            "node"
        ] // add "electron" here if you use it
    },
    "include": [
        "src/main/**/*",
        "src/renderer/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "dist/*",
        "build/*",
        "release/*",
        "sherpa-onnx/*",
        ".next",
        ".turbo",
        ".cache",
        "coverage",
        "out",
        "**/__tests__/**",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.gen.ts",
        "**/*.gen.tsx",
        "**/__generated__/**"
    ]
}